[
    {
        "selector": "node",
        "style": {
            "background-color": "#666",
            "label": "data(label)"
        }
    },
    {
        "selector": "node.active",
        "style": {
            "background-color": "#8f8"
        }
    },
    {
        "selector": "node.waiting",
        "style": {
            "background-color": "#fa0"
        }
    },
    {
        "selector": "node.selected",
        "style": {
            "background-color": "#5df"
        }
    },
    {
        "selector": ":parent",
        "style": {
            "background-color": "#ffa",
            "border-width": 1,
            "border-color": "#444"
        }
    },
    {
        "selector": "edge",
        "style": {
            "width": 5,
            "line-color": "#f55",
            "target-arrow-color": "#f55",
            "target-arrow-shape": "triangle",
            "curve-style": "straight"
        }
    },
    {
        "selector": "edge.selected",
        "style": {
            "background-color": "#5df"
        }
    },
    {
        "selector": "edge.multi",
        "style": {
            "width": 15,
            "line-style": "dashed",
            "arrow-scale": 0.8
        }
    }
]